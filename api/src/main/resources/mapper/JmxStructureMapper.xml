<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.guojiaxing1995.easyJmeter.mapper.JmxStructureMapper">

    <resultMap id="BaseResultMap" type="io.github.guojiaxing1995.easyJmeter.model.JmxStructureDO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="case_id" jdbcType="INTEGER" property="caseId"/>
        <result column="asset_id" jdbcType="INTEGER" property="assetId"/>
        <result column="structure_json" jdbcType="LONGVARCHAR" property="structureJson"/>
        <result column="version" jdbcType="INTEGER" property="version"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="delete_time" jdbcType="TIMESTAMP" property="deleteTime"/>
    </resultMap>

    <select id="findLatestByCaseId" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE case_id = #{caseId}
          AND delete_time IS NULL
        ORDER BY version DESC
        LIMIT 1
    </select>

    <select id="findByCaseIdAndVersion" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE case_id = #{caseId}
          AND version = #{version}
          AND delete_time IS NULL
        LIMIT 1
    </select>

    <select id="findAllVersionsByCaseId" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE case_id = #{caseId}
          AND delete_time IS NULL
        ORDER BY version DESC
    </select>

    <select id="findLatestByAssetId" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE asset_id = #{assetId}
          AND delete_time IS NULL
        ORDER BY version DESC
        LIMIT 1
    </select>

    <select id="findByAssetIdAndVersion" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE asset_id = #{assetId}
          AND version = #{version}
          AND delete_time IS NULL
        LIMIT 1
    </select>

    <select id="findAllVersionsByAssetId" resultMap="BaseResultMap">
        SELECT *
        FROM jmx_structure
        WHERE asset_id = #{assetId}
          AND delete_time IS NULL
        ORDER BY version DESC
    </select>

</mapper>

