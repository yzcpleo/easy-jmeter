<configuration>
    <!--给控制台输出增加颜色-->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex"
                    converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx"
                    converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <property name="CONSOLE_LOG_PATTERN"
              value="${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

    <!--输出到控制台-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>${CONSOLE_LOG_PATTERN}</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--统一输出到单个文件-->
    <appender name="UNIFIED_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <totalSizeCap>5GB</totalSizeCap>
            <maxHistory>60</maxHistory>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--保留 jmeter 专用日志文件-->
    <appender name="jmeter-log" class="ch.qos.logback.core.FileAppender">
        <file>logs/jmeter.log</file>
        <append>false</append>
        <layout>
            <pattern>%d %p %c{1.}: %m%n</pattern>
        </layout>
        <filter class="io.github.guojiaxing1995.easyJmeter.module.log.JmeterLogFilter"/>
    </appender>

    <logger name="io.github.guojiaxing1995.easyJmeter.module.log.MDCAccessServletFilter" level="INFO" additivity="false">
        <appender-ref ref="UNIFIED_FILE"/>
    </logger>

    <!--开发环境配置：控制台 + 统一文件 + jmeter日志-->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="UNIFIED_FILE"/>
            <appender-ref ref="jmeter-log"/>
        </root>
    </springProfile>

    <!--生产环境配置：只使用统一文件 + jmeter日志-->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="UNIFIED_FILE"/>
            <appender-ref ref="jmeter-log"/>
        </root>
    </springProfile>

    <!--测试环境配置：控制台 + 统一文件 + jmeter日志-->
    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="UNIFIED_FILE"/>
            <appender-ref ref="jmeter-log"/>
        </root>
    </springProfile>

</configuration>